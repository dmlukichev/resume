root = true

[*]
charset = utf-8
indent_style = space
max_line_length = 100
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{less,sass,scss}]
indent_size = 2

[*.{html,pug}]
indent_size = 2

[*.yml]
indent_size = 2
